<br/>
<div class="card mx-auto mt-5" style="width: 30rem">
  <div class="card-header text-white bg-success">
    <h5 class="my-1 text-center"> <%= @event.title %> </h5>
  </div>
  <div class="card-body">
    <span class="font-weight-bold font-normal">Description :</span>
    <span class="card-text font-italic">
      "<%= @event.description %>"
    </span>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <span class="font-weight-bold">Nombre d'inscrits :</span>
      <%= @event.customers.count %> 
    </li>
    <li class="list-group-item">
      <span class="font-weight-bold">Quand ?</span>
      Début : <%= @event.start_date.strftime("%a %-d %b %Y à %H:%M") %>, 
      Fin : <%= @event.end_date.strftime("%a %-d %b %Y à %H:%M") %>
    </li>
    <li class="list-group-item">
      <span class="font-weight-bold">Où ?</span>
      <%= @event.location %> 
    </li>
    <li class="list-group-item">
      <span class="font-weight-bold">Prix :</span>
      <%= @event.price %> €
    </li>
  </ul>
  <div class="card-footer font-italic">
    <small>Publié par <%= @event.admin.first_name %> <%= @event.admin.last_name %> (<%= @event.admin.email %>)</small>
  </div>
</div>