<h2 class="h1 mt-5 mb-3 text-center">Créer un événement</h2>
<h1 class="h4 mt-5 mb-5 font-weight-normal text-center">Renseigne les détails de l'événement :</h1>

<div class="container mt-5 form-group" style="width: 40em">
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <% if @event.errors.any? %>
      <p class="alert alert-danger d-flex justify-content-center" role="alert">Les erreurs suivantes ont été rencontrées :</p>
        <% @event.errors.full_messages.each do |message| %>
          <p class="alert alert-danger d-flex justify-content-center" role="alert"><%= message %></p>
        <% end %>
    <% end %>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="form-group">
  <%= label_tag 'Titre :' %>
  <%= text_field_tag 'title', @title, autofocus: true, class: 'form-control' %>
  </div>    
  <div class="form-group">
    <%= label_tag 'Lieu :' %>
    <%= text_field_tag 'location', @location, autofocus: true, class: 'form-control' %>  
  </div>   
  <div class="form-group">
    <%= label_tag 'Prévu le :' %>
    <%= datetime_field_tag 'start_date', @time, autofocus: true, class: 'form-control' %>  
  </div>  
  <div class="form-group"> 
    <%= label_tag 'Durée (en minutes) :' %>
    <%= number_field_tag 'duration', @duration, autofocus: true, class: 'form-control' %>  
  </div>
  <div class="form-group"> 
    <%= label_tag 'Prix :' %>
    <%= number_field_tag 'price', @price, autofocus: true, class: 'form-control' %>  
  </div>
  <div class="form-group"> 
    <%= label_tag "Description de l'événement :" %>
    <%= text_area_tag 'description', @description, autofocus: true, class: 'form-control' %>  
  </div>
  <div class="actions mt-5 mb-3">
  <%= submit_tag "Publier ton événement", class:"btn btn-lg btn-dark btn-block" %>
  </div>
  <% end %>
</div>